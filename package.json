{
  "name": "@agile-cms/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "docker:up": "docker compose -f docker/stacks/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/stacks/docker-compose.yml down",
    "docker:logs": "docker compose -f docker/stacks/docker-compose.yml logs -f",
    "docker:status": "docker compose -f docker/stacks/docker-compose.yml ps",
    "docker:restart": "npm run docker:down && npm run docker:up",
    "predev": "npm run docker:up",
    "dev": "nx run-many --target=dev --parallel --output-style=stream",
    "dev:services": "docker compose -f docker/stacks/docker-compose.yml up",
    "postdev": "echo 'Dev stopped. Run \"npm run docker:down\" to stop services.'",
    "build": "nx run-many --target=build --all --output-style=stream",
    "lint": "nx run-many --target=lint --all --output-style=stream",
    "test": "nx run-many --target=test --all --output-style=stream"
  },
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "@nx/js": "21.6.5",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "nx": "21.6.5",
    "tslib": "^2.3.0",
    "vite": "^6.3.1",
    "typescript": "~5.9.2"
  },
  "workspaces": [
    "packages/*"
  ]
}